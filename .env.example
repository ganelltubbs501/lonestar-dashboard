# =============================================================================
# OPS DESKTOP ENVIRONMENT VARIABLES
# =============================================================================
#
# Copy this file to .env.local and fill in the values for your environment.
# REQUIRED variables must be set for the app to boot (validation in lib/env.ts).
# RECOMMENDED variables enable optional features.
#
# The app validates critical env vars and fails fast if missing.
# =============================================================================


# =============================================================================
# REQUIRED - App won't start without these
# =============================================================================

# Database connection string
# Format: postgresql://user:password@host:port/database?schema=public
# Example for local Postgres: postgresql://ops:ops_password@localhost:5432/ops_desktop?schema=public
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ops_desktop?schema=public"

# NextAuth secret for signing tokens
# Generate: npx auth secret
# Or: openssl rand -base64 32
AUTH_SECRET="generate-a-random-secret-here-use-openssl-rand-base64-32"

# NextAuth callback URL (where app is hosted)
# Local dev: http://localhost:3000
# Production: https://yourdomain.com
AUTH_URL="http://localhost:3000"


# =============================================================================
# EMAIL - Required for production magic link authentication
# =============================================================================
#
# If EMAIL_SERVER_HOST is empty in development, magic links are logged to console.
# In production, SMTP configuration is required for magic link emails.
#
# Options:
#   - Ethereal (test emails): https://ethereal.email
#   - Gmail (with App Password): smtp.gmail.com:587
#   - Resend (recommended): api.resend.com
#   - SendGrid: smtp.sendgrid.net:587

EMAIL_SERVER_HOST="smtp.ethereal.email"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-ethereal-user"
EMAIL_SERVER_PASSWORD="your-ethereal-password"
EMAIL_FROM="noreply@opsdesktop.local"


# =============================================================================
# RECOMMENDED - Enable optional features
# =============================================================================

# Go High Level Integration
# Webhook secret for verifying inbound webhooks
GHL_WEBHOOK_SECRET="dev-webhook-secret"
# API key for outbound API calls
GHL_API_KEY=""
# Your GHL location ID
GHL_LOCATION_ID=""
# Enable outbound sync to GHL (creates/updates records in GHL when WorkItems change)
# Set to "true" to enable (default: false, recommended for initial setup)
GHL_OUTBOUND_ENABLED="false"

# Logging level (debug, info, warn, error)
LOG_LEVEL="debug"


# =============================================================================
# APP CONFIG
# =============================================================================

# Node environment (development, production, test)
NODE_ENV="development"

# Demo mode: allow sign-in without email verification
# Set to false in production
DEMO_MODE="true"

# Public demo mode flag (visible to client)
NEXT_PUBLIC_DEMO_MODE="true"
